<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:behaviors="clr-namespace:Prism.Behaviors;assembly=Prism.Forms" 
    xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms" 
    prism:ViewModelLocator.AutowireViewModel="True" 
    x:Class="Week9PrismExampleApp.Views.SearchUserPage"
    Title="Test">
    <StackLayout
        Style="{StaticResource StackLayoutStyle}"
        Margin="0,20,0,0"
        Padding="30,50,30,0">
        <Label
            Text="PUBG Stats"
            FontSize="20"
            HorizontalOptions="Center"
            FontAttributes="Bold"
            TextColor="White"/>
        <Entry
            Style="{StaticResource EntryBoxStyle}"
            Text="{Binding SearchUser_Entry_Text}"
            Margin="0,20,0,0"
            Placeholder="Enter a Battlegrounds Username..."/>
        <Button
            Style="{StaticResource ClickableTextButtonStyle}"
            Text="Search"
            Margin="0,20,0,0"
            Command="{Binding SearchButtonClickedCommand}"/>
        <ActivityIndicator
            Style="{StaticResource ActivityIndicatorStyle}"
            IsRunning="{Binding IsLoading}"
            Margin="0,20,0,0"/>
    </StackLayout>
</ContentPage>
