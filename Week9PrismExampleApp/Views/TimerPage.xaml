<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:behaviors="clr-namespace:Prism.Behaviors;assembly=Prism.Forms" 
    xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms" 
    prism:ViewModelLocator.AutowireViewModel="True" 
    x:Class="Week9PrismExampleApp.Views.TimerPage"
    Title="Blue Field Timer">
   
    <ContentPage.Content>
        
        <Grid 
            BackgroundColor="#222"
            Padding="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>


            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                
            </Grid.RowDefinitions>


                <!-- 
                TO DO:
                    Make page Grid Layout
                    Make Timer Work
                    Make buttons work
                    Add more buttons & Options
                    Add sounds (alarm?)
                    Make OnNavigate... actually useful
                    Make Main Page Prettier            
                -->

            <Frame
                Style="{StaticResource InfoFrameStyle}"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Grid.Row="0"
                HeightRequest="150"
                WidthRequest="300"
                >
                <Label 
                    x:Name="TimerLabel"
                    Text="5:30"
                    FontSize="80"
                    TextColor="#f4d442"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    HorizontalTextAlignment="Center"
                    VerticalTextAlignment="Center"
                />
            </Frame>
                
                
            <Frame
                Style="{StaticResource InfoFrameStyle}"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Grid.Row="1"
                >
                <Label 
                    x:Name="CircleNumLabel"
                    Text="{Binding CirceNum, StringFormat='Circle #{0}'}" FontAttributes="Bold"
                    FontSize="Medium"
                    TextColor="#f4d442"
                    HorizontalTextAlignment="Center"                        
                />
            </Frame>


            <Frame
                Style="{StaticResource InfoFrameStyle}"
                Grid.Column="2"
                Grid.ColumnSpan="2"
                Grid.Row="1"
                >
                <Label 
                    x:Name="LengthNumLabel"
                    Text="{Binding LengthNum, StringFormat='Length {0} m'}" FontAttributes="Bold"
                    FontSize="Medium"
                    TextColor="#f4d442"
                    HorizontalTextAlignment="Center"
                                
                />
            </Frame>

            <Frame
                Style="{StaticResource InfoFrameStyle}"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Grid.Row="2"                   
                >
                <Label 
                    x:Name="DamageLabel"
                    Text="{Binding DamageTick, StringFormat='Damage/Tick: {0}'}" FontAttributes="Bold"
                    FontSize="Medium"
                    TextColor="Black"
                    HorizontalOptions="Center"
                    />
            </Frame>

                
            <Button
                x:Name="StartButton"
                Style="{StaticResource ClickableTextButtonStyle}"
                Text="Start Timer"
                Command="{Binding StartTimerCommand}" 
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Grid.Row="3"
                
                VerticalOptions="Center"
                HorizontalOptions="Center"
                />

            <Button
                x:Name="ResetButton"
                Style="{StaticResource ClickableTextButtonStyle}"
                Text="Reset Timer"
                Command="{Binding ResetTimerCommand}" 
                Grid.Column="2"
                Grid.ColumnSpan="2"
                Grid.Row="3"
                
                VerticalOptions="Center"
                HorizontalOptions="Center"
                />

            <Button
                x:Name="InfoButton"
                Style="{StaticResource ClickableTextButtonStyle}"
                Text="Info"
                Command="{Binding ShowInfoCommand}" 
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Grid.Row="4"
                VerticalOptions="Center"
                />
        </Grid>

    </ContentPage.Content>
</ContentPage>